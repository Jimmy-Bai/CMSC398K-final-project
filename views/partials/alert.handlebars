{{!-- Sign Up and Sign In Messages --}}
{{#each msg}}
<div class="form-row">
  <div class="alert error_alert alert-dismissible fade show w-100" role="alert">
    <strong>Error!</strong> {{this.msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{{/each}}

